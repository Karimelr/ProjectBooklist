{% extends 'base.html.twig' %}

{% block title %}BOOKLIST! Voor al uw informatie over boeken{% endblock %}

{% block body %}
    <br>
    <h1>Review index</h1>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Beschrijving</th>
                <th>Naam</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for review in reviews %}
            <tr>
                <td>{{ review.id }}</td>
                <td>{{ review.Beschrijving }}</td>
                <td>{{ review.Naam }}</td>
                <td>
                    <a href="{{ path('review_show', {'id': review.id}) }}">show</a>
                    <a href="{{ path('review_edit', {'id': review.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('review_new') }}">Create new</a>
{% endblock %}
