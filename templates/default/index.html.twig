{% extends 'base.html.twig' %}

{% block title %}BOOKLIST! Voor al uw informatie over boeken{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; margin-top: 280px; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

    <div class="example-wrapper">
        <br>
        <h1 class="title">Zoek een boek:</h1>
        <br>
        <div class="container-fluid">
            <div class="input-group mb-3">
